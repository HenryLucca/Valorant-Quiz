<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/perfilbackground"
    tools:context=".TLBetoPageActivity">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="78dp"
        android:layout_gravity="right"
        android:layout_height="30dp"
        android:background="@android:color/holo_blue_bright"
        android:paddingHorizontal="10dp"
        android:text="Voltar"
        android:textColor="@android:color/white" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="190dp"
        app:cardCornerRadius="50dp"

        app:srcCompat="@drawable/eu" />

    <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/cardview_light_background"
            android:text="Olá, Me chamo Matheus Albuquerque"
            android:shadowColor="@color/cardview_dark_background">

        </TextView>




    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/cardview_light_background"
        android:text="Idade: 23 anos"
        />
    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/cardview_light_background"
        android:text="Graduando em ciencia da computação"
        />

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/cardview_light_background"
        android:text="Tecnologias"
        android:padding="4dp"
        android:background="@color/cardview_dark_background"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="51dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/react" />

        <ImageView
            android:layout_width="51dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/html" />

        <ImageView
            android:layout_width="51dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/css" />
        <ImageView
            android:layout_width="51dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/js" />

        <ImageView
            android:layout_width="63dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/java" />
    </LinearLayout>

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/cardview_light_background"
        android:text="Hobbies"
        android:background="@color/cardview_dark_background"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/cardview_light_background"
            android:text="Jogar TFT"
            />

        <ImageView
            android:layout_width="51dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/pengu" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">
        android:layout_marginTop="10dp"
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/cardview_light_background"
            android:text="Ficar com meus gatos"
            />

        <ImageView
            android:layout_width="51dp"
            android:layout_height="70dp"
            android:gravity="center_horizontal"
            app:srcCompat="@drawable/gato" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">
        android:layout_marginTop="10dp"
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/cardview_light_background"
            android:text="Treinar"
            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center_horizontal"
            app:srcCompat="@drawable/allmight" />

    </LinearLayout>



</LinearLayout>